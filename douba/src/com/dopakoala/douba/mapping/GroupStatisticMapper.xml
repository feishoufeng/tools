		from group_statistics s
		<if test="type == 2">
			left join group_user_sign
			us on us.uid = s.uid
			and us.gid =
			s.gid
		</if>
		left join group_user gu on gu.uid = s.uid and gu.gid = s.gid
		left join
		user u on u.uid = gu.uid
		where s.gid =
		#{gid,jdbcType=INTEGER}
		<if test="uid != null">
			and s.uid =
			#{uid,jdbcType=INTEGER}
		</if>
		and s.sid = #{sid,jdbcType=VARCHAR}
		and s.type =
		#{type,jdbcType=INTEGER}
		order by s.runmiles desc) b
		<if test="page > 0 || pagesize > 0">
			limit
			#{page,jdbcType=INTEGER},#{pagesize,jdbcType=INTEGER}
		</if>
	</select>
